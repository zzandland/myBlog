<% include ../partials/header %>
  <div class="container my-3">
 	<h1 class=''>Editing <%= post.title %></h1>
 	<hr>
 	<div class="container">
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
		  <div class="form-group">
		  	<div class="row">
		  	  <div class="col">
			    <label for="title">Title</label>
			    <input type="text" name="post[title]" class="form-control" id="title" value="<%= post.title %>">
			  </div>
			  <div class="col">
			    <label for="author">Author</label>
			    <input type="text" name="post[author]" class="form-control" id="author" value="<%= post.author %>">
			  </div>
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="image">Image URL</label>
		    <input type="text" name="post[image]" class="form-control" id="image" value="<%= post.image %>">
		  </div>  
		  <div class="form-group">
		  	<label for="body">Content</label>
		    <textarea name="post[body]" id="body" class="form-control" rows="15"><%= post.body %></textarea>
		  </div>
		  <button type="submit" class="btn btn-lg btn-outline-success">Submit</button>
		</form>	
    </div>
  </div>
<% include ../partials/footer %>