<% include ../partials/header %>
<% include ../../middleware/functions %>
<div class="container">
  <div class="row">
    <!-- Latest Posts -->
    <main class="posts-listing col-lg-8"> 
      <div class="container">
        <div class="row">
          <!-- post -->
          <% for (var i = 0; i < posts.length; i++) { -%>
            <div class="post col-xl-6">
              <div class="post-thumbnail"><a href="/posts/<%= posts[i]._id %>"><img src="<%= posts[i].image %>" alt="..." class="img-fluid img-posts"></a></div>
              <div class="post-details">
                <div class="post-meta d-flex justify-content-between">
                  <div class="date meta-last"><%= posts[i].date.toDateString().split(/\d{4}/)[0] %> | <%= posts[i].date.toDateString().match(/\d{4}/)[0] %></div>
                  <div class="category"><a href="#">Business</a></div>
                </div><a href="/posts/<%= posts[i]._id %>">
                  <h3 class="h4"><%= posts[i].title %></h3>
                <p class="text-muted text-convert"><%= posts[i].body.length > 250 ? posts[i].body.substring(0, 250).replace(/<(?:.|\n)*?>/gm, '') + "..." : posts[i].body.replace(/<(?:.|\n)*?>/gm, '') %></p></a>
                <footer class="post-footer d-flex align-items-center"><a href="#" class="author d-flex align-items-center flex-wrap">
                    <div class="avatar"><img src="<%= posts[i].author.image %>" alt="..." class="img-fluid"></div>
                    <div class="title"><span><%= posts[i].author.username %></span></div></a>
                  <div class="date"><i class="icon-clock"></i> <%= timeDifference(posts[i].date) %></div>
                  <div class="comments meta-last"><i class="icon-comment"></i><%= posts[i].comments.length %></div>
                </footer>
              </div>
            </div>
          <% } -%>
        <!-- Pagination -->
        <nav id="nav-width">
          <ul class="pagination pagination-template d-flex justify-content-center">
            <li class="page-item"><a href="#" class="page-link"> <i class="fas fa-angle-left"></i></a></li>
            <li class="page-item"><a href="#" class="page-link active">1</a></li>
            <li class="page-item"><a href="#" class="page-link">2</a></li>
            <li class="page-item"><a href="#" class="page-link">3</a></li>
            <li class="page-item"><a href="#" class="page-link"> <i class="fas fa-angle-right"></i></a></li>
          </ul>
        </nav>
      </div>
    </main>
   <% include ../partials/widget %> 
  </div>
</div>
<% include ../partials/footer %>